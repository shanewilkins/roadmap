{
  // Pyright configuration for the roadmap project
  "include": [
    "roadmap/**/*.py",
    "tests/**/*.py"
  ],
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    "dist",
    "build",
    ".venv",
    "htmlcov"
  ],
  "pythonVersion": "3.10",
  "pythonPlatform": "All",

  // Type checking settings - gradual migration approach
  "typeCheckingMode": "basic",

  // Global settings - permissive during migration
  "reportMissingModuleSource": false,
  "reportMissingImports": "warning",
  "reportUndefinedVariable": "error",
  "reportAssertAlwaysTrue": "warning",
  "reportUnusedImport": "information",
  "reportUnusedVariable": "information",
  "reportDuplicateImport": "warning",
  "reportGeneralTypeIssues": "warning",
  "reportOptionalMemberAccess": "warning",
  "reportOptionalSubscript": "warning",

  // Phase-based strictness overrides for gradual migration
  "overrides": [
    {
      // Phase 2: Core modules - stricter checking
      "include": [
        "roadmap/core.py",
        "roadmap/models.py",
        "roadmap/cli/core.py",
        "roadmap/persistence.py"
      ],
      "typeCheckingMode": "standard",
      "reportUnknownArgumentType": "warning",
      "reportUnknownVariableType": "warning",
      "reportUnknownMemberType": "warning",
      "reportMissingTypeStubs": "information"
    },
    {
      // Phase 3: Extended modules - moderate checking
      "include": [
        "roadmap/analytics.py",
        "roadmap/github_client.py",
        "roadmap/git_integration.py",
        "roadmap/cli/*.py"
      ],
      "reportUnknownArgumentType": "information",
      "reportUnknownVariableType": "information",
      "reportGeneralTypeIssues": "information"
    },
    {
      // Test files - minimal checking to avoid blocking
      "include": ["tests/**/*.py"],
      "typeCheckingMode": "basic",
      "reportMissingImports": false,
      "reportUnknownArgumentType": false,
      "reportUnknownVariableType": false
    }
  ],

  // Performance settings
  "useLibraryCodeForTypes": true,
  "autoSearchPaths": true,
  "extraPaths": [
    "./roadmap"
  ]
}
