# Production Environment Configuration
# Copy this file to .env for production deployments
# This ensures production-only installation and secure defaults

# Installation Mode
# Use: poetry install --no-dev
# Or:  pip install . (without extras)
# Result: 0 known CVEs in dependency tree

ROADMAP_ENV=production

# Security: Enable credential caching
ROADMAP_CACHE_CREDENTIALS=true

# Logging: Production level
ROADMAP_LOG_LEVEL=warning

# Performance: Async operations
ROADMAP_ASYNC_ENABLED=true
